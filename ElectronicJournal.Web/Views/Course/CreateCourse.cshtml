@model ElectronicJournal.Web.ViewModels.CourseCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Создание</h1>

<h4>Курс</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRequest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label><br />
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label" ></label><br />
                    <textarea asp-for="Description" class="form-control" class="form-control">

                    </textarea>
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-check">
                    <input name="courseType" type="radio" value="1" />
                    <span>Внешний</span> <br />
                    <input checked="checked" name="courseType" type="radio" value="2" />
                    <span>Внутренний</span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Обратно к курсам</a>
</div>



